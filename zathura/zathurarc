### colors {{{
#set statusbar-bg "#00FF00"
#set statusbar-fg red

#set recolor-darkcolor "#93A1A1"
#set recolor-lightcolor "#002B36"
#set recolor true

#set statusbar-bg "#000000"
#set statusbar-fg "#CC0000"
#set default-fg "#FFFFFF"
#set default-bg "#000000"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
#set recolor-keephue             "true"
#set default-bg                  "#1B2B34"
#set default-fg                  "#343D46"
#
#set statusbar-fg                "#A7ADBA"
#set statusbar-bg                "#343D46"
#
#set inputbar-bg                 "#1B2B34"
#set inputbar-fg                 "#4F5B66"
#
#set notification-error-bg       "#EC5f67"
#set notification-error-fg       "#1B2B34"
#
#set notification-warning-bg     "#EC5f67"
#set notification-warning-fg     "#1B2B34"
#
#set highlight-color             "#FAC863"
#set highlight-active-color      "#6699CC"
#set highlight-fg                "#FFFFFF"
#set highlight-transparency      0.8
#
#set completion-highlight-fg     "#4F5B66"
#set completion-highlight-bg     "#5FB3B3"
#
#set completion-bg               "#4F5B66"
#set completion-fg               "#5FB3B3"
#
#set notification-bg             "#99C794"
#set notification-fg             "#1B2B34"
#
#set recolor-lightcolor          "#1B2B34"
#set recolor-darkcolor           "#CDD3DE"
#set recolor                     "true"

# color settings
set default-bg "#C7EDCC"
set recolor true
set recolor-lightcolor "#C7EDCC"
set recolor-darkcolor "#000000"
### }}}

### settings {{{
set selection-clipboard clipboard
set abort-clear-search  true
set incremental-search  true
set advance-ds-per-row  true
set continuous-hist-save false
set database null
set show-directories    true
set show-hidden         true
set search-hadjust      true

set statusbar-home-tilde true
set vertical-center false
set synctex true
set highlight-transparency 0.5
set scroll-full-overlap 0.2
set scroll-page-aware true
set window-title-basename true
set first-page-column 1:1

set window-height 1024
set window-width  768
set adjust-open   width
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding  1
set pages-per-row 1
set scroll-wrap false
set scroll-step 40
set zoom-max  1000
set zoom-min  10
set zoom-step 10

#c:cmdline, s:statusbar h:horizontal-scrollbar v:vertial-scrollbar
set guioptions "s"
set font "Monospace bold 12"
### }}}

### key bindings {{{
map <Esc>   abort
map <Tab>   toggle_statusbar
map <Enter> toggle_fullscreen

map    +  zoom in
map    -  zoom out
map    =  zoom default
map    ~  toggle_index
map    ;  toggle_inputbar
map   \'  mark_evaluate

map    a  adjust_window best-fit
map    c  recolor
map <C-c> copy_link
map <C-d> display_link
map    f  toggle_fullscreen
map    F  follow
map   gg  goto top
map    G  goto bottom
map    h  scroll left
map    i  zoom in
map   gi  focus_inputbar
map <C-i> jumplist forward
map    j  scroll down
map    J  scroll half-down
map <C-j> scroll full-down
map    k  scroll up
map    K  scroll half-up
map <C-k> scroll full-up
map    l  scroll right
map    m  mark_add
map    n  search forward
map    N  search backward
map <C-n> navigate next
map    o  zoom out
map   go  focus_inputbar :open
map <C-o> jumplist backward
map    P  toggle_presentation
map <C-p> navigate previous
map    q  quit
map    r  rotate rotate-cw
map    R  rotate rotate-ccw
map <C-r> reload
map    s  toggle_page_mode
map    S  snap_to_page
map    w  adjust_window width
map   zi  zoom in
map   zo  zoom out

map [index]   ~  toggle_index
map [index]   j  scroll down
map [index]   J  scroll half-down
map [index]   k  scroll up
map [index]   K  scroll half-up
map [index]   l  scroll right

