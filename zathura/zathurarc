### colors {{{
set highlight-transparency      0.5

set default-fg                  "#D8DEE9"
set default-bg                  "#2E3440"
set statusbar-fg                "#D8DEE9"
set statusbar-bg                "#2E3440"
set index-bg                    "#2E3440"
set index-fg                    "#D8DEE9"
set index-active-bg             "#81A1C1"
set index-active-fg             "#D8DEE9"
set inputbar-bg                 "#2E3440"
set inputbar-fg                 "#D8DEE9"
set highlight-color             "#81A1C1"
set highlight-active-color      "#81A1C1"
set highlight-fg                "#FFFFFF"
set completion-highlight-fg     "#BF616A"
set completion-highlight-bg     "#2E3440"
set completion-bg               "#2E3440"
set completion-fg               "#D8DEE9"
set notification-bg             "#D8DEE9"
set notification-fg             "#2E3440"
set notification-error-bg       "#EC5f67"
set notification-error-fg       "#1B2B34"
set notification-warning-bg     "#EBCB8B"
set notification-warning-fg     "#2E3440"

set recolor true
set recolor-darkcolor           "#000000"
set recolor-lightcolor          "#C7EDCC"
### }}}

### settings {{{
set selection-clipboard clipboard
set abort-clear-search  true
set incremental-search  true
set advance-ds-per-row  true
set continuous-hist-save false
set database null
set show-directories    true
set show-hidden         true
set search-hadjust      true

set statusbar-home-tilde true
set vertical-center false
set synctex         false
set n-completion-items  18
set scroll-full-overlap 0.2
set scroll-page-aware true
set window-title-basename true
set first-page-column 1:1

set window-height 1024
set window-width  768
set adjust-open   width
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding  1
set pages-per-row 1
set scroll-wrap false
set scroll-step 40
set zoom-max  1000
set zoom-min  10
set zoom-step 10

#c:cmdline, s:statusbar h:horizontal-scrollbar v:vertial-scrollbar
set guioptions "s"
set font "Monospace bold 12"
### }}}

### key bindings {{{
map <Esc>   abort
map <Tab>   toggle_statusbar
map <Enter> toggle_fullscreen

#map <C-o> feedkeys ":exec zathura '$FILE'<Return>"
#map <C-y> feedkeys ":exec sh -c 'printf \"%\" \"$FILE\" | xclip -i'<Return>"
#map <F3>  feedkeys ":set scroll-step 40<Return>"
#map <F6>  focus_inputbar ":set recolor-lightcolor \#ffffff"    
#map <F7>  focus_inputbar ":set recolor-darkcolor  \#000000"    
#map <F8>  feedkeys "<F6><Return><F7><Return>" 

