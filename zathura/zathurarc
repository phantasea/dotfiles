### settings {{{
set selection-clipboard clipboard
set abort-clear-search  true
set advance-ds-per-row  true
set database sqlite

set statusbar-home-tilde true
set vertical-center true
set synctex true
set scroll-full-overlap 0.2
set scroll-page-aware true
set window-title-basename true

set window-height 1024
set window-width  768
set adjust-open   width
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set pages-per-row 1
set scroll-wrap false
set scroll-step 40
set zoom-max  1000
set zoom-min  10
set zoom-step 10
#set sandbox strict

set font "Monospace bold 12"
#c:cmdline, s:statusbar h:horizontal-scrollbar v:vertial-scrollbar
set guioptions "s"
### }}}

### key bindings {{{
map <Esc>  abort
map <Tab>  toggle_statusbar

map    +  zoom in
map    -  zoom out
map    =  zoom default
map    ~  toggle_index
map    ;  toggle_inputbar
map   \'  mark_evaluate

map    a  adjust_window best-fit
map    c  recolor
map <C-c> copy_link
map <C-d> display_link
map    f  toggle_fullscreen
map    F  follow
map   gg  goto top
map    G  goto bottom
map    h  scroll left
map    i  zoom in
map   gi  focus_inputbar
map <C-i> jumplist forward
map    j  scroll down
map    J  scroll half-down
map <C-j> scroll full-down
map    k  scroll up
map    K  scroll half-up
map <C-k> scroll full-up
map    l  scroll right
map    m  mark_add
map    n  search forward
map    N  search backward
map <C-n> navigate next
map    o  zoom out
map   go  focus_inputbar :open
map <C-o> jumplist backward
map    P  toggle_presentation
map <C-p> navigate previous
map    q  quit
map    r  rotate rotate-cw
map    R  rotate rotate-ccw
map <C-r> reload
map    s  toggle_page_mode
map    S  snap_to_page
map    w  adjust_window width
map   zi  zoom in
map   zo  zoom out
### }}}

