# zathurarc

# colors
#set statusbar-bg "#00FF00"
#set statusbar-fg red

#set recolor-darkcolor "#93A1A1"
#set recolor-lightcolor "#002B36"
#set recolor true

# colors
#set statusbar-bg "#000000"
#set statusbar-fg "#CC0000"
#set default-fg "#FFFFFF"
#set default-bg "#000000"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
#set recolor-keephue             "true"
#set default-bg                  "#1B2B34"
#set default-fg                  "#343D46"
#
#set statusbar-fg                "#A7ADBA"
#set statusbar-bg                "#343D46"
#
#set inputbar-bg                 "#1B2B34"
#set inputbar-fg                 "#4F5B66"
#
#set notification-error-bg       "#EC5f67"
#set notification-error-fg       "#1B2B34"
