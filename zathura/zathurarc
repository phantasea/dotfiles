#set recolor                     "true"

# color settings
set default-bg "#C7EDCC"
set recolor true
set recolor-lightcolor "#C7EDCC"
set recolor-darkcolor "#000000"

# settings
set window-height 1024
set window-width  768
set adjust-open   width
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# use sqlite as bookmarks database backend
#set database sqlite

# key bindings
map <Esc>      abort
map <Tab>      toggle_statusbar

map + zoom in
map - zoom out
map a adjust_window best-fit
map b recolor
map f toggle_fullscreen
map F follow
map i zoom in
map j scroll down
map J navigate next
map k scroll up
map K navigate previous
map o zoom out
map p navigate previous
map P toggle_presentation
map q quit
map r rotate rotate-cw
map R rotate rotate-ccw
map s toggle_page_mode
map w adjust_window width
map y reload

map [fullscreen] + zoom in
map [fullscreen] - zoom out
map [fullscreen] a adjust_window best-fit
map [fullscreen] b recolor
map [fullscreen] f toggle_fullscreen
map [fullscreen] F follow
map [fullscreen] i zoom in
map [fullscreen] j scroll down
map [fullscreen] J navigate next
map [fullscreen] k scroll up
map [fullscreen] K navigate previous
map [fullscreen] o zoom out
map [fullscreen] p navigate previous
map [fullscreen] P toggle_presentation
map [fullscreen] q quit
map [fullscreen] r rotate rotate-cw
map [fullscreen] R rotate rotate-ccw
map [fullscreen] s toggle_page_mode
map [fullscreen] w adjust_window width

map [presentation] + zoom in
