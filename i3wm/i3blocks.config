[vnstat_today_rx]
command=echo "$(/home/simone/.config/i3/scrypts/vnstat_today_rx)"
interval=15
color=#A4C2F4

[separator]

[bluetooth]
command=echo "$(/home/simone/.config/i3/scrypts/bluetooth)"
interval=15

[separator]

[wifi]
command=echo "$(/home/simone/.config/i3/scrypts/wifi)"
interval=30
color=#EEAACC

[separator]

[cpu_usage]
command=echo "$(/home/simone/.config/i3/scrypts/cpu_usage)"
interval=10
color=#1793D1
min_width=55

[separator]

[cpu_temperature]
command=echo "$(/home/simone/.config/i3/scrypts/temperature)"
interval=10
color=#FF6666
min_width=55

[separator]

[volume]
command=echo "$(/home/simone/.config/i3/scrypts/volume)"
interval=once
interval=3
color=#88b04b

[separator]

[battery]
command=echo "$(/home/simone/.config/i3/scrypts/battery)"
interval=15

[separator]

[backlight]
label=☀
command=echo "$(cat /sys/class/backlight/amdgpu_bl0/brightness)"
interval=5
color=#77bbbb

[separator]

[time]
label=
command=date "+%a %h/%d %H:%M:%S"
interval=5
color=#A4C2F4

