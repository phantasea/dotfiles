#!/bin/bash

BT=""

BUDS=$(bluetoothctl info 0C:17:73:D9:EB:09 | grep 'Connected' | cut -d':' -f2)
if [[ $BUDS =~ 'yes' ]]; then
    BT='üéß'
fi

MOUSE=$(bluetoothctl info D6:35:94:46:93:A8 | grep 'Connected' | cut -d':' -f2)
if [[ $MOUSE =~ 'yes' ]]; then
    BT+='üñ±Ô∏è'
fi

if [[ -z $BT ]]; then
    BT="ÔÄç"
    color="color='#FFFFFF'"
else
    color="color='#33FF33'"
fi

logo='Ôäì'
echo "<span $color>$logo</span> $BT"
