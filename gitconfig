[user]
	name = phantasea
	email = phantasea@gmail.com

[color]
    ui = true

[core]
    pager = less
    editor = vim
    quotepath = false

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[diff "word"]
	textconv = strings

[diff "exif"]
	textconv = exiftool

[merge]
    keepBackup = false
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[push]
	default = matching

[alias]
    co = checkout
    ci = commit
    br = branch
    st = status
    lg = log
    dt = difftool
    mt = mergetool
    last = log -1 HEAD
    unstage = reset HEAD --
    lg = "log --color --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"

