! Configuration for xterm

!Xft.dpi: 96
!Xft.antialias: true
!Xft.hinting: true
!Xft.rgba: rgb
!Xft.autohint: true
!Xft.hintstyle: hintfull
!Xft.lcdfilter: lcdfilter

! Make alt work
XTerm*eightBitInput:   false
XTerm*eightBitOutput:  true

! Every shell is a login shell by default (for inclusion of all necessary environment variables)
xterm*loginshell: true

! Scrollbacks
xterm*savelines: 16384

! Double-click to select whole URLs :D
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! Right-side scrollbar
xterm*rightScrollBar: false
xterm*ScrollBar: false

! Stop output to terminal from jumping down to bottom of scroll again
xterm*scrollTtyOutput: false

!true, CJK text column width of 2
xterm*cjkWidth:true

! Default font and size
xterm*faceName: Monospace
!xterm*Font: Ubuntu Mono Nerd Font Complete Mono
!xterm.font: xft:UbuntuMono Nerd Font:size=13, \
!            xft:Inconsolata Nerd Font Mono:size=13, \
!            xft:DejaVuSansMono Nerd Font:size=13, \
!            xft:DroidSansMono Nerd Font:size=13, \
!            xft:FuraMono Nerd Font:size=13, \
!            xft:RobotoMono Nerd Font:size=13, \
!            xft:Noto Sans Mono:size=13, \
!            xft:Monospace:style=Medium:size=13   
xterm*boldFont: Monospace
XTerm*utf8: true
XTerm*locale: true
XTerm*renderFont: true
XTerm*scaleHeight: 1.01
xterm*faceNameDoublesize:WenQuanYi Zen Hei Mono
xterm*faceSize: 12

XTerm.vt100.translations: #override \n\
  Ctrl <Key> j: smaller-vt-font() \n\
  Ctrl <Key> k: larger-vt-font()

! Colors
xterm*foreground: rgb:a8/a8/a8
xterm*background: rgb:22/22/22
xterm*color0: rgb:00/00/00
xterm*color1: rgb:a8/00/00
xterm*color2: rgb:00/a8/00
xterm*color3: rgb:a8/54/00
xterm*color4: rgb:58/58/b8
xterm*color5: rgb:a8/00/a8
xterm*color6: rgb:00/a8/a8
xterm*color7: rgb:a8/a8/a8
xterm*color8: rgb:54/54/54
xterm*color9: rgb:fc/54/54
xterm*color10: rgb:54/fc/54
xterm*color11: rgb:fc/fc/54
xterm*color12: rgb:54/54/fc
xterm*color13: rgb:fc/54/fc
xterm*color14: rgb:54/fc/fc
xterm*color15: rgb:fc/fc/fc

! End configuration for xterm
