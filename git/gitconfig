[user]
    name = phantasea
    email = phantasea@gmail.com

[color]
    ui = true

[core]
    pager = "if x-is-run ; then GIT_PAGER='delta'; else GIT_PAGER='less'; fi; $GIT_PAGER"
    editor = vim
    quotepath = false
    mergeoptions = --no-edit
    autocrlf = input
    safecrlf = false
    excludesfile = /opt/conf/gitignore

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[diff "word"]
    textconv = strings

[diff "exif"]
    textconv = exiftool

[merge]
    keepBackup = false
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[push]
    default = matching

[svn]
    rmdir = true

[alias]
    a  = add
    c  = clone
    d  = diff
    co = checkout
    ci = commit -m
    br = branch
    st = status
    lg = log
    dt = difftool
    mt = mergetool
    rv = remote -v
    last = whatchanged -1
    unstage = reset HEAD --
    lg = "log --color --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"

[credential]
    helper = store

## setting for delta
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = false
    line-numbers = false
    #syntax-theme = Dracula
    file-style = red bold ul
    file-decoration-style = red bold ul
    hunk-header-decoration-style = cyan box ul

[diff]
    colorMoved = default

