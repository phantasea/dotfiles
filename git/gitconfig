[diff "word"]
	textconv = strings

[diff "exif"]
	textconv = exiftool

[merge]
    keepBackup = false
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[push]
	default = matching

[svn]
    rmdir = true

[alias]
    a  = add
    c  = clone
    d  = diff
    co = checkout
    ci = commit -m
    br = branch
    st = status
    lg = log
    dt = difftool
    mt = mergetool
    rv = remote -v
    last = whatchanged -1
    unstage = reset HEAD --
    lg = "log --color --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"

