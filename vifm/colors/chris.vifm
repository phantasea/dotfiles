" The standard ncurses colors are:
" Default = -1 = None, can be used for transparency or default color
" Black   = 0  Red     = 1  Green   = 2  Yellow  = 3 
" Blue    = 4  Magenta = 5  Cyan    = 6  White   = 7

" Available style values (some of them can be combined):
" bold  underline  reverse/inverse  standout  none

"highlight group        ctermfg=fg_color  ctermbg=bg_color  cterm=attrs 

set laststatus

highlight clear

highlight  Win          ctermfg=yellow    ctermbg=black     cterm=none
highlight  OtherWin     ctermfg=yellow    ctermbg=black     cterm=none
highlight  AuxWin       ctermfg=yellow    ctermbg=black     cterm=none
highlight  OddLine      ctermfg=yellow    ctermbg=black     cterm=none
highlight  Directory    ctermfg=cyan      ctermbg=none      cterm=none
highlight  Link         ctermfg=magenta   ctermbg=none      cterm=bold
highlight  BrokenLink   ctermfg=black     ctermbg=none      cterm=bold
highlight  Socket       ctermfg=red       ctermbg=none      cterm=bold
highlight  Device       ctermfg=red       ctermbg=none      cterm=bold
highlight  Fifo         ctermfg=blue      ctermbg=none      cterm=bold
highlight  Executable   ctermfg=green     ctermbg=none      cterm=none
highlight  ErrorMsg     ctermfg=red       ctermbg=black     cterm=none
highlight  Border       ctermfg=white     ctermbg=black     cterm=none
highlight  TopMid       ctermfg=white     ctermbg=black     cterm=bold
highlight  TabNr        ctermfg=none      ctermbg=none      cterm=none
highlight  LineNr       ctermfg=white     ctermbg=black     cterm=bold
highlight  StatusLine   ctermfg=white     ctermbg=blue      cterm=bold
highlight  CmdLine      ctermfg=yellow    ctermbg=none      cterm=bold
highlight  TabLine      ctermfg=none      ctermbg=black     cterm=none
highlight  TopLine      ctermfg=white     ctermbg=blue      cterm=none
if &topmidfiller == " "
highlight  TabLineSel   ctermfg=white     ctermbg=red       cterm=bold
highlight  TopLineSel   ctermfg=white     ctermbg=blue      cterm=bold
else
highlight  TabLineSel   ctermfg=white     ctermbg=green     cterm=bold
highlight  TopLineSel   ctermfg=white     ctermbg=red       cterm=bold
endif
highlight  CurrLine     ctermfg=none      ctermbg=black     cterm=bold,reverse
highlight  OtherLine    ctermfg=white     ctermbg=black     cterm=bold
highlight  Selected     ctermfg=white     ctermbg=none      cterm=bold
highlight  JobLine      ctermfg=white     ctermbg=blue      cterm=bold
highlight  Menu         ctermfg=white     ctermbg=black     cterm=none
highlight  Dialog       ctermfg=white     ctermbg=black     cterm=bold
highlight  WildMenu     ctermfg=white     ctermbg=black     cterm=underline,reverse
highlight  SuggestBox   ctermfg=yellow    ctermbg=black     cterm=bold
highlight  CmpMismatch  ctermfg=red       ctermbg=black     cterm=bold

highlight  User1        ctermfg=cyan      ctermbg=black     cterm=bold,reverse
highlight  User2        ctermfg=green     ctermbg=black     cterm=bold,reverse
highlight  User3        ctermfg=yellow    ctermbg=black     cterm=bold,reverse
highlight  User4        ctermfg=white     ctermbg=blue      cterm=bold
highlight  User5        ctermfg=red       ctermbg=black     cterm=bold,reverse
highlight  User6        ctermfg=magenta   ctermbg=black     cterm=bold,reverse
highlight  User9        ctermfg=white     ctermbg=black     cterm=bold,reverse

highlight  /\.exe$/i                                        ctermfg=green   ctermbg=none    cterm=none
highlight  /\.(m3u|tar|tgz|iso|rar|gz|7z|zip|deb)$/i        ctermfg=red     ctermbg=none    cterm=bold
highlight  /^(TODO|Makefile|README|FAQ|ChangeLog|INSTALL)/I ctermfg=red     ctermbg=none    cterm=bold
highlight  /\.orig$/i                                       ctermfg=black   ctermbg=none    cterm=bold
