" options {{{
"let &syncregs = $USER
"screen!
"set termguicolors

" This is the actual command used to start vi.  The default is vim.
set vicmd="vimux"
set vixcmd="vimux"

" What should be saved automatically between vifm runs
set vifminfo=tui,tabs,savedirs,ratings
set sessionoptions=tui,tabs,savedirs,ratings

" IO options
set syscalls
set iooptions=fastfilecloning

" TUI options
set notitle
set nolsview
set nodotfiles
set millerview
set tabstop=4
set numberwidth=1
set shortmess="T"
set timeoutlen=2000
set cpoptions="s"
set tuioptions="v"
set caseoptions="pg"
set previewoptions="graphicsdelay:30000"
set confirm=permdelete
set dotdirs=treeleafsparent
set timefmt="%H:%M\ %m/%d/%y"
set tabscope=pane
set showtabline=multiple
set tabprefix="[%0*%N:"
set tablabel="%0*%[(%n)%]%[%[%T{tree}%]%[{%c}%]@%]%p%0*"
set tabsuffix="]"
set statusline="%1*[%A]%7*|%5*%u:%g%7*|%2*%d%7*|%6*%a | %E%7*|%4* %= \"%t%T\""
set rulerformat="%=%r %l%%%S%[(+%x)%] %P"
set fillchars=vborder:\|
set dirsize=nitems
set viewcolumns=-{name},{rating},17{mtime}
set sizefmt=units:iec,precision:1,nospace
set milleroptions=lsize:2,csize:5,rsize:3,rpreview:dirs

set redolastcmdcfm
set prefervsplit
set maxundotabs=3
set maxratingstars=7
set previewmaxsize=3000
set nofilenamedispall
set topmidfiller="+"
if $DISPLAY == ""
set filenamedisplen=64
else
set filenamedisplen=49
endif

set aproposprg='apropos %a'
set deleteprg=""
set findprg='fd -i -d=3 -t=f %p'
set grepprg='rg -S --vimgrep %i %a'
set locateprg='locate %a'
set mediaprg='vifmmed'
set previewprg=""

source $VIFM/devicons

windo filter! /(lost\+found|Desktop|sandisk_ext|sandisk_exp|downloadhelper
              \|\.pyo$|\.pyc$|__pycache__|Extreme\ SSD|3166-6338|d042e951-|google|华为手机助手)/

" Show list of matches on tab complition in command-line mode
set wildmenu
