[options]
# Suppress built-in key bindings, and specify them explicitly in this config file.
suppress_default_binds = true

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]
gg = goto 1
<Shift+G> = goto -1
j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0
i = zoom 1
o = zoom -1
r = rotate by 90
<Shift+R> = rotate by -90
#<Shift+R> = exec mogrify -rotate 90 "$imv_current_file"
x = close
n = next 1
p = prev 1
f = fullscreen
d = overlay
<Shift+D> = exec rm "$imv_current_file"; close
c = center
#s = scaling next
#<Shift+S> = upscaling next
s = slideshow +1
<Shift+S> = slideshow -1
q = quit
y = exec echo working!

<Left> = prev
<bracketleft> = prev
<Right> = next
<bracketright> = next
<Up> = zoom 1
<Shift+plus> = zoom 1
<Down> = zoom -1
<minus> = zoom -1
<tab> = exec echo $imv_current_file
<space> = next 1
<Backspace> = prev 1
<Enter> = reset
<period> = zoom actual
#<period> = next_frame
