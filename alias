# vim: filetype=sh :

if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias ll='ls -AlF'
alias la='ls -AF'
alias l='ls -l'
alias l.='ls -dF .*'

alias ..='cd ..'
alias ...='cd ..; cd ..'

alias a='alias'
alias acpi='acpi -V'
alias ad='~/git/clone/adbfs-rootless/adbfs /mnt/adb'
alias c='git clone'
alias cal='ccal -u'
alias ct='cd .Trash'
alias d='vimdiff +0 '
alias del='~/.util/del'
alias dec='gpg --decrypt-files'
alias enc='gpg --encrypt-files'
alias edit='vim'
alias e='~/.util/vimux edit'
alias f='file'
alias fbi='fim'
alias fbgs='fimgs'
alias fm='~/.util/fmux'
alias fe='~/.util/fmux2'
alias ranger='ranger --confdir=~/.ranger'
alias g='wget -c'
alias gc='sudo vim /boot/grub/grub.cfg'
alias i='fim'
alias inst='sudo apt-get install'
alias loc='locate'
alias md='mkdir'
alias man='~/.util/manmux'
alias mtp='sudo mtpfs -o allow_other /mnt/mtp'
alias umtp='sudo fusermount -u /mnt/mtp'
alias mus='~/.util/musmux'
alias musinfo='mocp --info'
alias musnext='mocp --next'
alias musprev='mocp --prev'
alias musstop='mocp --stop'
alias musplay='mocp --play'
alias musclear='mocp --clear'
alias muspause='mocp --toggle-pause'
alias nb='newsbeuter -q'
alias nml='nmcli con list'
alias nmu='nmcli con up id'
alias nmd='nmcli con down id'
alias nms='nmcli con status'
alias p='cat'
alias pg='ps aux | grep -v grep | grep '
alias q='exit'
alias s='vnstat -i'
alias src='source ~/.bashrc'
alias shut='~/.util/autoshut'
alias boot='~/.util/autoboot'
alias t='fbterm -- tmux'
alias v='~/.util/vimux view'
alias vid='mplayer -vo fbdev2'
alias vidfs='mplayer -vo fbdev2 -xy 1024 -fs -zoom'
alias x='sudo lightdm start'
alias wd='wvdial cdma3g &'
alias w='~/.util/w3mux'
alias web='~/.util/w3mux'
alias wgg='~/.util/w3mux www.google.com'
alias wbd='~/.util/w3mux www.baidu.com'
alias wqq='~/.util/w3mux www.qq.com'
alias winrec='sudo mount /dev/disk/by-label/REC /media/rec'
alias winsys='sudo mount -o ro /dev/disk/by-label/SYS /media/sys'
alias winapp='sudo mount -o ro /dev/disk/by-label/APP /media/app'
