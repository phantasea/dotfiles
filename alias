# vim: filetype=sh :

if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias l='ls -l'
alias ll='ls -Al'
alias la='ls -A'
alias ld='ls -d */'
alias ld2='ls -aF | grep /'
alias l.='ls -d .*'
alias l.d='ls -d .*/'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -='cd -'

alias a='alias'
alias acpi='acpi -V'
alias ad='/opt/git/adbfs-rootless/adbfs /media/adb'
alias c='git clone'
alias cal='ccal -u'
alias cg='cd /opt/git'
alias ce='cd /opt/.etc'
alias cu='cd /opt/.util'
alias cv='cd /opt/.vim'
alias cw='cd /opt/web'
alias d='vimdiff +0 '
alias del='~/.util/del'
alias dec='gpg --decrypt-files'
alias enc='gpg --encrypt-files'
alias edit='vim'
alias e='~/.util/vimux edit'
